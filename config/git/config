[core]
	editor = nvim
[diff]
	algorithm = histogram
	colorMoved = dimmed-zebra
	colorMovedWS = allow-indentation-change
[branch]
  sort = -committerdate
[pull]
	twohead = ort
	ff = only

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  side-by-side = true

[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
