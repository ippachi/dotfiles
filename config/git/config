[user]
  name = ippachi
  email = ippachi1018@gmail.com
[core]
  editor = nvim
	hooksPath = ~/.config/git/hooks
[diff]
  algorithm = histogram
  colorMoved = dimmed-zebra
  colorMovedWS = allow-indentation-change
[branch]
  sort = -committerdate
[pull]
  twohead = ort
  ff = only
[merge]
  tool = vimdiff
	conflictStyle = diff3
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[alias]
  df = diff --word-diff=color -w
  lg = log --oneline --graph
  st = status
  br = branch
  co = checkout
  ci = commit
[rerere]
	enabled = true
