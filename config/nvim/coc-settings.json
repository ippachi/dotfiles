{
  "languageserver": {
    "sorbet": {
      "command": "bundle",
      "args": [
        "exec",
        "srb",
        "tc",
        "--enable-all-experimental-lsp-features",
        "--lsp",
        "--disable-watchman"
      ],
      "filetypes": [
        "ruby"
      ],
      "rootPatterns": [
        "sorbet/config"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "suggest.noselect": true
}
