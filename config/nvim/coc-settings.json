{
  "codeLens.enable": true,
  "suggest.enablePreview": true,
  "languageserver": {
    "sorbet": {
      "command": "bundle",
      "args": [
        "exec",
        "srb",
        "tc",
        "--enable-all-experimental-lsp-features",
        "--lsp",
        "--disable-watchman"
      ],
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"],
      "initializationOptions": {},
      "settings": {}
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {}
    }
  }
}
