{
  "codeLens.enable": true,
  "suggest.enablePreview": true,
  "hover.floatConfig": {
    "border": true,
    "winblend": 15
  },
  "suggest.floatConfig": { "border": true, "winblend": 15 },
  "signature.floatConfig": { "border": true, "winblend": 15 },
  "diagnostic.floatConfig": { "border": true, "winblend": 15 },
  "languageserver": {
    "sorbet": {
      "command": "bundle",
      "args": [
        "exec",
        "srb",
        "tc",
        "--enable-all-experimental-lsp-features",
        "--lsp",
        "--disable-watchman"
      ],
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"],
      "initializationOptions": {},
      "settings": {}
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {}
    }
  }
}
